{
  "name": "iams-base",
  "version": "0.1.0",
  "description": "Base app for Integrated Asset Management System",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint --ext .js,.jsx .",
    "pretest": "npm run lint --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xcubeio/iams-base.git"
  },
  "keywords": [
    "IAMS",
    "Asset",
    "xCube.io"
  ],
  "author": "xCube.io Development Team <support@xcube.io>",
  "license": "LicenseRef-LICENSE",
  "bugs": {
    "url": "https://github.com/xcubeio/iams-base/issues"
  },
  "homepage": "hhttps://github.com/xcubeio/iams-base#readme",
  "dependencies": {
    "apollo-client": "^0.5.0",
    "babel-runtime": "6.18.0",
    "bcrypt": "^0.8.7",
    "body-parser": "^1.15.2",
    "bootstrap": "^3.3.7",
    "classnames": "^2.2.5",
    "express": "^4.14.0",
    "graphql": "^0.7.2",
    "graphql-server-express": "^0.4.3",
    "graphql-tag": "^0.1.16",
    "graphql-tools": "^0.8.0",
    "invariant": "^2.2.1",
    "lodash": "^4.16.6",
    "meteor-node-stubs": "~0.2.0",
    "moment": "^2.15.2",
    "react": "^15.3.2",
    "react-apollo": "^0.5.16",
    "react-bootstrap": "^0.30.6",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0",
    "react-router-bootstrap": "^0.23.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.5.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "meteor/no-session": "off",
      "object-shorthand": [
        "error",
        "always",
        {
          "avoidQuotes": false
        }
      ],
      "meteor/eventmap-params": [
        "error",
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        "off"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/forbid-prop-types": "off",
      "jsx-a11y/no-static-element-interactions": "off"
    },
    "settings": {
      "import/resolver": "meteor"
    }
  }
}
