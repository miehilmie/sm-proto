{
  "name": "iams-base",
  "version": "0.1.0",
  "description": "Base app for Integrated Asset Management System",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint --ext .js,.jsx .",
    "pretest": "npm run lint --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xcubeio/iams-base.git"
  },
  "keywords": [
    "IAMS",
    "Asset",
    "xCube.io"
  ],
  "author": "xCube.io Development Team <support@xcube.io>",
  "license": "LicenseRef-LICENSE",
  "bugs": {
    "url": "https://github.com/xcubeio/iams-base/issues"
  },
  "homepage": "https://github.com/xcubeio/iams-base#readme",
  "dependencies": {
    "apollo-client": "^0.5.20",
    "babel-runtime": "6.20.0",
    "bcrypt": "^1.0.1",
    "body-parser": "^1.15.2",
    "bookshelf": "^0.10.2",
    "bootstrap": "^4.0.0-alpha.5",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "express": "^4.14.0",
    "graphql": "^0.8.2",
    "graphql-server-express": "^0.4.3",
    "graphql-subscriptions": "^0.2.2",
    "graphql-tag": "^1.1.2",
    "graphql-tools": "^0.8.4",
    "invariant": "^2.2.2",
    "knex": "^0.12.6",
    "lodash": "^4.17.2",
    "meteor-node-stubs": "^0.2.4",
    "moment": "^2.17.1",
    "pg": "^6.1.2",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-addons-perf": "^15.4.1",
    "react-addons-transition-group": "^15.4.1",
    "react-apollo": "^0.7.1",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.4.1",
    "react-router": "^4.0.0-alpha.6",
    "reactstrap": "^3.9.5"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "eslint": "^3.12.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-graphql": "^0.4.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.8.0"
  },
  "babel": {
    "plugins": [
      "babel-plugin-transform-decorators-legacy",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "allowImportExportEverywhere": true
    },
    "globals": {
      "window": true
    },
    "plugins": [
      "meteor",
      "graphql"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "meteor/no-session": "off",
      "object-shorthand": [
        "error",
        "always",
        {
          "avoidQuotes": false
        }
      ],
      "meteor/eventmap-params": [
        "error",
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        "off"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/forbid-prop-types": "off",
      "jsx-a11y/no-static-element-interactions": "off"
    },
    "settings": {
      "import/resolver": "meteor"
    }
  }
}
